<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:orientation="vertical"
    tools:context=".presentation.fragments.AddJobDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnAddJobDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Details"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/empty_job_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add your Job details"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginVertical="10dp"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/jobDetailLayout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:layout_marginBottom="10dp">
                <include layout="@layout/job_detail_layout"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>