<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="5dp"
    android:background="@drawable/curved_background"
    android:elevation="8dp"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cil_Profile"
            android:scaleType="fitXY"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/empower_pro_logo"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cil_fullname"
                android:textStyle="italic"
                android:textColor="@color/goldenColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pakwan User"/>
            <TextView
                android:id="@+id/cil_comment"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="This is the good comment of recipe."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/cil_input_edit_comment"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/cil_btn_update_comment"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cil_layout"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/cil_edit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Comment"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/cil_delete_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Comment"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</LinearLayout>