<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fa_CreatePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/add_recipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="22dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Create Post"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fa_CreatePost"
            app:layout_constraintEnd_toEndOf="@+id/fa_CreatePost"
            app:layout_constraintStart_toStartOf="@+id/fa_CreatePost" />

        <ImageView
            android:id="@+id/fa_CreateJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:src="@drawable/add_recipe"
            app:layout_constraintEnd_toEndOf="@+id/fa_CreatePost"
            app:layout_constraintStart_toStartOf="@+id/fa_CreatePost"
            app:layout_constraintTop_toBottomOf="@+id/fa_CreatePost" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="22dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Create Job"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fa_CreateJob"
            app:layout_constraintEnd_toEndOf="@+id/fa_CreateJob"
            app:layout_constraintStart_toStartOf="@+id/fa_CreateJob" />

        <ImageView
            android:id="@+id/fa_AddCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:src="@drawable/add_company"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fa_CreateJob"
            app:layout_constraintStart_toStartOf="@+id/fa_CreateJob"
            app:layout_constraintTop_toBottomOf="@+id/fa_CreateJob" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="22dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Add Company"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fa_AddCompany"
            app:layout_constraintEnd_toEndOf="@+id/fa_AddCompany"
            app:layout_constraintStart_toStartOf="@+id/fa_AddCompany" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>