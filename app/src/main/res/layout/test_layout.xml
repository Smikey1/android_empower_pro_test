<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="2dp"
    android:paddingEnd="2dp">


    <TextView
        android:id="@+id/tvCountryCodeDropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 (US)"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dividerHorizontal"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/goldenColor"
        app:layout_constraintEnd_toEndOf="@+id/tvCountryCodeDropdown"
        app:layout_constraintStart_toStartOf="@+id/tvCountryCodeDropdown"
        app:layout_constraintTop_toBottomOf="@+id/tvCountryCodeDropdown" />

    <!-- Add other UI elements below the divider as needed -->

</androidx.constraintlayout.widget.ConstraintLayout>
